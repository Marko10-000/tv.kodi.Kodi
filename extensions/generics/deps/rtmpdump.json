{
    "name": "rtmpdump",
    "buildsystem": "simple",
    "build-commands": [
        "sed -e 's/^CRYPTO=OPENSSL/CRYPTO=GNUTLS/' -i librtmp/Makefile",
        "sed -e 's|usr/local|app/extensions/generics|' -i librtmp/Makefile",
        "make -C librtmp",
        "make -C librtmp install PREFIX=/app/extensions/generics"
    ],
    "build-options": {
        "prefix": "/app/extensions/generics"
    },
    "sources": [
        {
            "type": "archive",
            "url": "http://rtmpdump.mplayerhq.hu/download/rtmpdump-2.3.tgz",
            "sha256": "ef38b7a99d82ce6912063d21063aeaf28185341b3df486e24bffce5354224b2c"
        }
    ]
}
